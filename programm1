while [ true ]
do
echo "Программа запрашивате тип операции:удаление,перемещение и создание файла. Разработчик: Урманов_Артём_728-2"
echo "Введите команду,которую хотите применить к файл"
echo "удаление(0),создание(1),перемещение(2)"
read int1
if [ "$int1" == 0 ]
then
echo "Введите путь к файлу для удаление" 
read int2
if [ -f "$int2" ]
then
rm $int2
echo "Файл успешно удалён"
else
 echo "Файл не найден!"
fi
fi
if [ "$int1" == 1 ]
then
echo "Введите путь,где хотите создать файл"
read int3
if [ -d "$int3" ]
then
echo "Введитте имя,для создаваемого файла"
read int33
touch "$int3"/"$int33"
echo "Файл успешно создан"
else
 echo "Путь не найден!"
fi
fi
if [ "$int1" == 2 ]
then
echo "Введите путь где находиться файл,для его перемещения"
read  int4
if [ -f "$int4" ]
then
echo "Введите путь,куда хотите переместить файл"
read int5
if [ -d "$int5" ]
then
mv $int4 $int5
echo "Файл успешно перемещён"
else 
echo "Файл или каталог не найден!"
fi
fi
fi
echo "Хотите продолжить: Да(Нажмите любую кнопку) \ Нет(Ctrl+C)"
read $int6
done
